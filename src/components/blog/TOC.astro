---
import { generateToc } from "@/utils/generateToc";
import type { MarkdownHeading } from "astro";
import TOCHeading from "./TOCHeading.astro";

interface Props {
	headings: MarkdownHeading[];
	position?: "top" | "sidebar";
}

const { headings } = Astro.props;

const toc = generateToc(headings);
---

<details
	open
	class:list={[
		Astro.props.position === "sidebar" && "border-l-2 border-[var(--color-ui-2)] pl-4 lg:sticky lg:top-12 lg:order-2 lg:basis-56 lg:max-w-56 lg:shrink-0"
	]}
>
	<summary
		class="cursor-pointer text-sm font-medium text-[var(--color-tx-2)] mb-3 list-none flex items-center"
		><span class="toggle-icon mr-2 inline-block">â–¼</span><span>Table of Contents</span></summary
	>
	<nav class="text-sm ml-6">
		<ol class="space-y-2">
			{toc.map((heading) => <TOCHeading heading={heading} />)}
		</ol>
	</nav>
</details>
