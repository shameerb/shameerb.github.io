---
import { type CollectionEntry, render } from "astro:content";

import Masthead from "@/components/blog/Masthead.astro";
import TOC from "@/components/blog/TOC.astro";
import WebMentions from "@/components/blog/webmentions/index.astro";
import { siteConfig } from "@/site.config";

import BaseLayout from "./Base.astro";

interface Props {
	post: CollectionEntry<"post">;
}

const { post } = Astro.props;
const { ogImage, title, description, updatedDate, publishDate } = post.data;
const socialImage = ogImage ?? `/og-image/${post.id}.png`;
const articleDate = updatedDate?.toISOString() ?? publishDate.toISOString();
const { headings, remarkPluginFrontmatter } = await render(post);
const readingTime: string = remarkPluginFrontmatter.readingTime;
const showTOC = (post.data.showTOC ?? false) && !!headings.length;
const tocPosition = siteConfig.tocPosition;
---

<BaseLayout
	meta={{
		articleDate,
		description,
		ogImage: socialImage,
		title,
	}}
>
	<article
		class="relative mx-auto w-full max-w-lg grow overflow-visible break-words"
		data-page
		find-body
	>
		<div id="blog-hero" class="mb-4">
			<Masthead content={post} readingTime={readingTime} />
		</div>
		{
			showTOC && tocPosition === "top" && (
				<div class="mb-2">
					<TOC headings={headings} position="top" />
				</div>
			)
		}
		{
			showTOC && tocPosition === "sidebar" && (
				<aside class="hidden lg:absolute lg:top-0 lg:left-0 lg:block lg:h-full lg:w-48 lg:-translate-x-full lg:pr-6">
					<div class="overflow-y-auto lg:sticky lg:top-24 lg:mt-32 lg:max-h-[calc(100vh-8rem)]">
						<TOC headings={headings} position="sidebar" />
					</div>
				</aside>
			)
		}
		{
			!!post.data.tags?.length && (
				<aside class="hidden lg:absolute lg:top-32 lg:right-0 lg:block lg:w-48 lg:translate-x-full lg:pl-6">
					<div class="lg:sticky lg:top-24">
						<div class="text-xs">
							<h3 class="mb-2 font-medium text-[var(--color-tx-3)]">Tags</h3>
							<div class="flex flex-wrap gap-1">
								{post.data.tags.map((tag) => (
									<a
										class="cactus-link tag inline-block text-xs text-[var(--color-tx-3)] before:content-['#']"
										data-pagefind-filter={`tag:${tag}`}
										href={`/tags/${encodeURIComponent(tag)}/`}
									>
										{tag}
									</a>
								))}
							</div>
						</div>
					</div>
				</aside>
			)
		}
		<div
			class="prose prose-sm prose-headings:font-medium prose-headings:text-accent-2 prose-headings:before:absolute prose-headings:before:-ms-4 prose-headings:before:text-gray-600 prose-headings:hover:before:text-accent sm:prose-th:before:content-none overflow-wrap-anywhere w-full max-w-none border-t border-[var(--color-ui-2)] pt-6"
		>
			<slot />
			<WebMentions />
		</div>
	</article>
	<button
		class="hover:border-link fixed end-4 bottom-8 z-90 flex h-10 w-10 translate-y-28 cursor-pointer items-center justify-center rounded-full border-2 border-transparent bg-zinc-200 text-3xl opacity-0 transition-all transition-discrete duration-300 data-[show=true]:translate-y-0 data-[show=true]:opacity-100 sm:end-8 sm:h-12 sm:w-12 dark:bg-zinc-700"
		data-show="false"
		id="to-top-btn"
	>
		<span class="sr-only">Back to top</span>
		<svg
			aria-hidden="true"
			class="h-6 w-6"
			fill="none"
			focusable="false"
			stroke="currentColor"
			stroke-width="2"
			viewBox="0 0 24 24"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path d="M4.5 15.75l7.5-7.5 7.5 7.5" stroke-linecap="round" stroke-linejoin="round"></path>
		</svg>
	</button>
</BaseLayout>

<script>
	const scrollBtn = document.getElementById("to-top-btn") as HTMLButtonElement;
	const targetHeader = document.getElementById("blog-hero") as HTMLDivElement;

	function callback(entries: IntersectionObserverEntry[]) {
		entries.forEach((entry) => {
			// only show the scroll to top button when the heading is out of view
			scrollBtn.dataset.show = (!entry.isIntersecting).toString();
		});
	}

	scrollBtn.addEventListener("click", () => {
		document.documentElement.scrollTo({ behavior: "smooth", top: 0 });
	});

	const observer = new IntersectionObserver(callback);
	observer.observe(targetHeader);

	// TOC active section highlighting
	const tocSidebar = document.querySelector("aside > div");
	if (tocSidebar) {
		const headings = document.querySelectorAll(".prose h2, .prose h3, .prose h4");
		const tocLinks = tocSidebar.querySelectorAll("a");

		function updateActiveTOC() {
			let current = "";
			headings.forEach((heading) => {
				const top = heading.getBoundingClientRect().top;
				if (top < 100) {
					current = heading.id;
				}
			});

			tocLinks.forEach((link) => {
				link.classList.remove("text-accent", "font-semibold");
				if (link.getAttribute("href") === `#${current}`) {
					link.classList.add("text-accent", "font-semibold");
				}
			});
		}

		window.addEventListener("scroll", updateActiveTOC, { passive: true });
		updateActiveTOC();
	}
</script>
